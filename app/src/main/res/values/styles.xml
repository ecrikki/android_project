<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Peach</item>
        <item name="colorPrimaryDark">@color/Bard</item>
        <item name="colorAccent">@color/Bard</item>
        <!--Убрать статс сверху-->
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="noClicks" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Bard</item>
        <item name="android:textColor">@color/Peach</item>
    </style>
    <style name="onClicks" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Peach</item>
        <item name="android:textColor">@color/Bard</item>
    </style>
</resources>
